<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_analysis_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analysis Results"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neuropathy Risk Assessment"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_risk_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Risk Level: Low"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_risk_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Risk Score: 0.25"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:id="@+id/text_model_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ“ Analysis by ML Model"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:visibility="visible"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_risk_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Based on your test results, your risk of diabetic neuropathy is low."
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Data Summary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_glucose_value_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glucose Value: 120 mg/dL"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_temperature_sensation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature Sensation: Yes"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_pressure_sensation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pressure Sensation: Yes"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_emg_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMG Analysis: Normal pattern"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_close_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
